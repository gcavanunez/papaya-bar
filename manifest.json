{
	"manifest_version": 3,
	"name": "Papaya Bar",
	"version": "0.1.0",
	"version_name": "0.1.0",
	"description": "Chrome Extension manage tabs",
	"author": "Guillermo Cava",
	"permissions": [
		"storage",
		"tabCapture",
		"history",
		"bookmarks",
		"activeTab",
		"unlimitedStorage",
		"tabs",
		"scripting",
		"downloads",
		"tabGroups",
		"desktopCapture",
		"contextMenus",
		"clipboardWrite",
		"system.display"
	],
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": ["favicon.ico", "/static/media/*"],
			"matches": ["<all_urls>"]
		}
	],
	"host_permissions": ["<all_urls>"],
	"icons": {
		"16": "public/assets/papaya-icon.png",
		"32": "public/assets/papaya-icon.png",
		"48": "public/assets/papaya-icon.png",
		"128": "public/assets/papaya-icon.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["public/content.js"]
		}
	],
	"commands": {
		"open-page": {
			"suggested_key": {
				"default": "Ctrl+Shift+K",
				"mac": "Command+Shift+K"
			},
			"description": "Open Chonching tabs",
			"global": false
		},
		"copy-link": {
			"suggested_key": {
				"default": "Ctrl+Shift+1",
				"mac": "Command+Shift+1"
			},
			"description": "Copy link name",
			"global": true
		},
		"screenshot-area": {
			"suggested_key": {
				"default": "Ctrl+Shift+2",
				"mac": "Command+Shift+2"
			},
			"description": "Screenshot area",
			"global": false
		}
	},
	"action": {
		"default_popup": "index.html#/about",
		"default_title": "Choncho"
	}
}
